<Page x:Class="ShreeHandloomInvoice.Views.InvoicePreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= TITLE ================= -->
            <TextBlock Text="TAX INVOICE"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 10"/>

            <!-- ================= HEADER ================= -->
            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT -->
                    <StackPanel>
                        <TextBlock Text="{Binding Invoice.ShopName}"
                                   FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Invoice.ShopAddress}"/>

                        <TextBlock>
                            <Run Text="GSTIN : "/>
                            <Run Text="{Binding Invoice.GSTIN}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="State : "/>
                            <Run Text="{Binding Invoice.StateName}"/>
                            <Run Text=" ("/>
                            <Run Text="{Binding Invoice.StateCode}"/>
                            <Run Text=")"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Contact : "/>
                            <Run Text="{Binding Invoice.ContactNo}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Email : "/>
                            <Run Text="{Binding Invoice.Email}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- RIGHT -->
                    <StackPanel Grid.Column="1">
                        <TextBlock>
                            <Run Text="Invoice No : "/>
                            <Run Text="{Binding Invoice.InvoiceNo}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Invoice Date : "/>
                            <Run Text="{Binding Invoice.InvoiceDate, StringFormat={}{0:dd-MM-yyyy}}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="PO / WO No : "/>
                            <Run Text="{Binding Invoice.PoWoNum}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Dispatch Through : "/>
                            <Run Text="{Binding Invoice.DispatchThrough}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Vehicle No : "/>
                            <Run Text="{Binding Invoice.VehicleNo}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Destination : "/>
                            <Run Text="{Binding Invoice.Destination}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ================= CONSIGNEE ================= -->
            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Padding="10" Margin="0 10 0 0">
                <StackPanel>
                    <TextBlock Text="Consignee (Ship To)" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Invoice.ConsigneeName}" Margin="0 3"/>
                    <TextBlock Text="{Binding Invoice.ConsigneeAddress}" TextWrapping="Wrap"/>
                    <TextBlock>
                        <Run Text="GSTIN : "/>
                        <Run Text="{Binding Invoice.BuyerGSTIN}"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- ================= BUYER ================= -->
            <Border Grid.Row="3" BorderBrush="Black" BorderThickness="1" Padding="10" Margin="0 10 0 0">
                <StackPanel>
                    <TextBlock Text="Buyer (Bill To)" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Invoice.BuyerName}" Margin="0 3"/>
                    <TextBlock Text="{Binding Invoice.BuyerAddress}" TextWrapping="Wrap"/>
                    <TextBlock>
                        <Run Text="GSTIN : "/>
                        <Run Text="{Binding Invoice.BuyerGSTIN}"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- ================= ITEMS ================= -->
            <Border Grid.Row="4" BorderBrush="Black" BorderThickness="1" Padding="5" Margin="0 10 0 0">
                <DataGrid ItemsSource="{Binding Invoice.Items}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Sr.No" Binding="{Binding SrNo}" Width="50"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="HSN" Binding="{Binding HSN}" Width="80"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80"/>
                        <DataGridTextColumn Header="Rate" Binding="{Binding Rate, StringFormat=0.00}" Width="100"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=0.00}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- ================= SUMMARY + BANK ================= -->
            <Grid Grid.Row="5" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="420"/>
                </Grid.ColumnDefinitions>

                <!-- BANK -->
                <StackPanel>
                    <TextBlock Text="Bank Details" FontWeight="Bold"/>

                    <TextBlock>
                        <Run Text="Bank Name : "/>
                        <Run Text="{Binding Invoice.BankName}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="A/c No : "/>
                        <Run Text="{Binding Invoice.BankAccountNo}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Branch : "/>
                        <Run Text="{Binding Invoice.BankBranch}"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="IFSC : "/>
                        <Run Text="{Binding Invoice.IFSC}"/>
                    </TextBlock>

                    <TextBlock Margin="0 10" FontWeight="Bold">
                        <Run Text="Amount in Words : "/>
                        <Run Text="{Binding Invoice.AmountInWords}"/>
                    </TextBlock>
                </StackPanel>

                <!-- GST SUMMARY -->
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Transportation" Grid.Row="0" Margin="0"/>
                        <TextBlock Text="{Binding Invoice.Transportation, StringFormat=0.00}"
                                   Grid.Row="0" Grid.Column="1" Margin="0 0 10 0"
                                   HorizontalAlignment="Right"/>

                        <TextBlock Text="Sub Total" Grid.Row="1" Margin="0"/>
                        <TextBlock Text="{Binding Invoice.SubTotal, StringFormat=0.00}"
                                   Grid.Row="1" Grid.Column="1"
                                   HorizontalAlignment="Right" Margin="0 0 10 0"/>

                        <TextBlock Text="SGST" Grid.Row="2" Margin="0"/>
                        <TextBlock Text="{Binding Invoice.SGSTAmount, StringFormat=0.00}"
                                   Grid.Row="2" Grid.Column="1"
                                   HorizontalAlignment="Right" Margin="0 0 10 0"/>

                        <TextBlock Text="CGST" Grid.Row="3" Margin="0"/>
                        <TextBlock Text="{Binding Invoice.CGSTAmount, StringFormat=0.00}"
                                   Grid.Row="3" Grid.Column="1"
                                   HorizontalAlignment="Right" Margin="0 0 10 0"/>

                        <TextBlock Text="IGST" Grid.Row="4" Margin="0"/>
                        <TextBlock Text="{Binding Invoice.IGSTAmount, StringFormat=0.00}"
                                   Grid.Row="4" Grid.Column="1"
                                   HorizontalAlignment="Right" Margin="0 0 10 0"/>

                        <Border Grid.Row="5" Grid.ColumnSpan="2" BorderThickness="1,1,0,0" BorderBrush="Black">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="GRAND TOTAL"
                                           FontWeight="Bold"
                                           Margin="0"/>

                                <TextBlock Text="{Binding Invoice.GrandTotal, StringFormat=0.00}"
                                           FontWeight="Bold"
                                           Grid.Column="1"
                                           HorizontalAlignment="Right"
                                           Margin="0 0 10 0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            <Button Content="Print Invoice"
        Command="{Binding PrintCommand}"
        Width="160"
        Height="40"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0 0 20 20"/>
        </Grid>
        
        
    </ScrollViewer>

    
</Page>
