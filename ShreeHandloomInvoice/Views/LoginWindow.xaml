<Window x:Class="AdminUtilityDashboard.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminUtilityDashboard.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="420" Width="370"  Background="#ceeff0" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="White"
                CornerRadius="12"
                Padding="30"
                Width="350"
                Height="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                >
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Login"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="User Name" 
                           FontSize="14" 
                           Margin="0,0,0,5"/>
                <DockPanel>
                    <Image Source="../Images/user.png" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBox x:Name="txtUsername"
                             Height="32" Style="{StaticResource WatermarkTextBoxStyle}" Tag="Enter Username"
                             Width="220"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             BorderBrush="Gray"
                             BorderThickness="0,0,0,1"/>
                </DockPanel>

                <!-- Password -->
                <TextBlock Text="Password" 
                           FontSize="14" 
                           Margin="0,20,0,5"/>
                <DockPanel>
                    <Image Source="../Images/lock.png" Width="20" Height="20" Margin="0,0,8,0"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Height="32" Style="{StaticResource WatermarkPasswordBoxStyle}" Tag="Enter Password"
                                 Width="220"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="Gray"
                                 BorderThickness="0,0,0,1"/>
                </DockPanel>

                <!-- Forgot Password -->
                <Button 
                      Background="White"   Name="BtnFrgtStg"
                      IsEnabled="{Binding IsEnable,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                      FontWeight="Normal" BorderThickness="0"
                      HorizontalAlignment="Right" IsTabStop="False"
                      Foreground="Black" FontSize="11"
                      Content=" Forgot Password "
                    VerticalAlignment="Center"
                      Click="BtnFrgtStg_Click"
                         />     
                <!-- Login Button -->
                <Button Content="Login" Margin="2"
                        Height="40" IsDefault="True"
                        Background="Black"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Black"
                        BorderThickness="1"
                       
                        Click="Login_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Create Account"
                    Background="Transparent"
                    Foreground="Blue"
                    BorderThickness="0"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Click="Signup_Click"/>  

            </StackPanel>
        </Border>
    </Grid>
</Window>
