<Page x:Class="ShreeHandloomInvoice.Views.InvoiceInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShreeHandloomInvoice.Views"
      mc:Ignorable="d" 
      Background="White"
      Title="Invoice Input">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <TextBlock Text="Create Invoice" FontSize="24"
                       FontWeight="Bold" Margin="0 0 0 20"/>

            <!-- Invoice Info -->
            <GroupBox Header="Invoice Details" Margin="0 0 0 20">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Invoice No:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Invoice.InvoiceNo}" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Invoice Date:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding Invoice.InvoiceDate}" Grid.Row="0" Grid.Column="3" Margin="5"/>

                    <TextBlock Text="Order No:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Invoice.OrderNo}" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Order Date:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding Invoice.OrderDate}" Grid.Row="1" Grid.Column="3" Margin="5"/>

                    <TextBlock Text="Dispatch Through:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Invoice.DispatchThrough}" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Vehicle No:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Invoice.VehicleNo}" Grid.Row="2" Grid.Column="3" Margin="5"/>
                </Grid>
            </GroupBox>

            <!--Cosignee details-->

            <GroupBox Header="Consignee Details" Margin="0 0 0 20">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Consignee Name:" Grid.Row="0"/>
                    <TextBox Text="{Binding Invoice.BuyerName}" Grid.Row="0" Margin="150 0 0 5"/>

                    <TextBlock Text="Consignee Address:" Grid.Row="2"/>
                    <TextBox Text="{Binding Invoice.BuyerAddress}" Grid.Row="2" Height="70"
                 Margin="150 0 0 0" TextWrapping="Wrap" AcceptsReturn="True"/>
                </Grid>
            </GroupBox>
            <!-- Buyer Info -->
            <GroupBox Header="Buyer Details" Margin="0 0 0 20">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Buyer Name:" Grid.Row="0"/>
                    <TextBox Text="{Binding Invoice.BuyerName}" Grid.Row="0" Margin="150 0 0 5"/>

                    <TextBlock Text="Address:" Grid.Row="2"/>
                    <TextBox Text="{Binding Invoice.BuyerAddress}" Grid.Row="2" Height="70"
                             Margin="150 0 0 0" TextWrapping="Wrap" AcceptsReturn="True"/>
                </Grid>
            </GroupBox>

            <!-- Items -->
            <GroupBox Header="Item Entry" Margin="0 0 0 20">
                <StackPanel Margin="10">

                    <!-- Item Input Fields -->
                    <Grid Margin="0 0 0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Description:" Margin="0 0 5 0"/>
                        <TextBox Grid.Column="1" Width="140" Text="{Binding NewItem.Description}"/>

                        <TextBlock Grid.Column="2" Text="Qty:" Margin="20 0 5 0"/>
                        <TextBox Grid.Column="3" Width="60" Text="{Binding NewItem.Quantity}"/>

                        <TextBlock Grid.Column="4" Text="Rate:" Margin="20 0 5 0"/>
                        <TextBox Grid.Column="5" Width="60" Text="{Binding NewItem.Rate}"/>

                        <TextBlock Grid.Column="6" Text="HSN:" Margin="20 0 5 0"/>
                        <TextBox Grid.Column="7" Width="80" Text="{Binding NewItem.HSN}"/>
                    </Grid>

                    <!-- Add Item Button -->
                    <Button Content="Add Item"
                Width="100"
                Command="{Binding AddItemCommand}"
                HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Item Details">
                <DataGrid ItemsSource="{Binding Invoice.Items}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Sr No" Binding="{Binding SrNo}" Width="50"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                        <DataGridTextColumn Header="HSN" Binding="{Binding HSN}" Width="80"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                        <DataGridTextColumn Header="Rate" Binding="{Binding Rate}" Width="100"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>



            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Generate Invoice"
                        Command="{Binding GenerateInvoiceCommand}"
                        Width="150" Height="35" Margin="5"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
