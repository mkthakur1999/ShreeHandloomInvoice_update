<Window x:Class="AdminUtilityDashboard.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5FAFF">
    <Grid>
        <Border Background="White" CornerRadius="12" Padding="20"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="300" Height="240">
            <StackPanel>
                <TextBlock Text="Reset Password" FontSize="20" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Username"/>
                <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,10" Style="{StaticResource WatermarkTextBoxStyle}" Tag="Enter Username"/>

                <!-- New Password -->
                <TextBlock Text="New Password"/>
                <PasswordBox x:Name="txtNewPassword" Height="30" Margin="0,0,0,20" Style="{StaticResource WatermarkPasswordBoxStyle}" Tag="Enter Updated Password"/>

                <!-- Reset Button -->
                <Button Content="Reset Password"
                        Background="Black" Foreground="White"
                        Height="35" Click="BtnReset_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
